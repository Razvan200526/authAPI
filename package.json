{
  "name": "@paladin11/authapi",
  "version": "1.0.1",
  "description": "Authentication module for Bun applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly --outDir dist",
    "build:clean": "rm -rf dist && bun run build",
    "prepublishOnly": "bun run build:clean",
    "pack:check": "npm pack --dry-run"
  },
  "keywords": [
    "auth",
    "authentication",
    "hono",
    "bun",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Razvan200526/authAPI.git"
  },
  "bugs": {
    "url": "https://github.com/Razvan200526/authAPI/issues"
  },
  "homepage": "https://github.com/Razvan200526/authAPI#readme"
}
